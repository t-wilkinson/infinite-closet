  },
  "devDependencies": {
    "core-js": "3",
    "cypress-plugin-tab": "^1.0.5",
    "npm-run-all": "4.1.5",
    "react-app": "^1.1.2",
    "wait-on": "5.2.1"
  },
  "dependencies": {
    "cypress": "^8.3.1",
    "lodash-es": "^4.17.21"
  },
  "prettier": {
    "eslintIntegration": false,
    "formatterPriority": 999,
    "semi": false,
