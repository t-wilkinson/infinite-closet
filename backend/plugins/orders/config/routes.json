{
  "routes": [
    {
      "method": "POST",
      "path": "/dates/range",
      "handler": "Date.range",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/dates/valid",
      "handler": "Date.datesValid",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "POST",
      "path": "/checkout",
      "handler": "Cart.checkout",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/cart/count",
      "handler": "Cart.count",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/cart/price",
      "handler": "Cart.totalPrice",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/cart/:user_id",
      "handler": "Cart.getCart",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/cart/:id",
      "handler": "Cart.removeCartItem",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
