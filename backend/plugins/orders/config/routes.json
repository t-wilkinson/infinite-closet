      "handler": "Order.create",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/status",
      "handler": "Order.status",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/amount",
      "handler": "Order.amount",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/",
      "handler": "Order.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/ship/:id",
      "handler": "Order.ship",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/complete/:id",
      "handler": "Order.complete",
      "config": {
        "plugins": []
      }
    }
