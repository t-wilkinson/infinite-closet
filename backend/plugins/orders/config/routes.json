{
  "routes": [
    {
      "method": "POST",
      "path": "/dates/range",
      "handler": "date.range",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/dates/valid",
      "handler": "date.availableOrderDates",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/checkout/payment-intents",
      "handler": "checkout.createPaymentIntent",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/checkout/payment-intents/:id",
      "handler": "checkout.updatePaymentIntent",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/checkout",
      "handler": "checkout.checkoutGuest",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/checkout-request",
      "handler": "checkout.checkoutRequest",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/checkout/:id",
      "handler": "checkout.checkoutUser",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "GET",
      "path": "/cart/count",
      "handler": "cart.count",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/cart/summary",
      "handler": "cart.priceSummary",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/cart/:user_id",
      "handler": "cart.getUserOrders",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/cart/view/:user_id",
      "handler": "cart.viewUserCart",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/cart/view",
      "handler": "cart.viewGuestCart",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/cart/:user_id",
      "handler": "cart.setCart",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "POST",
      "path": "/",
      "handler": "order.create",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/:id",
      "handler": "order.update",
      "config": {
        "policies": [["admin::hasPermissions", ["plugins::orders.manage"]]]
      }
    },
    {
      "method": "GET",
      "path": "/",
      "handler": "order.find",
      "config": {
        "policies": [["admin::hasPermissions", ["plugins::orders.manage"]]]
      }
    },
    {
      "method": "GET",
      "path": "/:id",
      "handler": "order.findOne",
      "config": {
        "policies": [["admin::hasPermissions", ["plugins::orders.manage"]]]
      }
    },
    {
      "method": "POST",
      "path": "/ship/:id",
      "handler": "order.ship",
      "config": {
        "policies": [["admin::hasPermissions", ["plugins::orders.manage"]]]
      }
    },
    {
      "method": "POST",
      "path": "/complete/:id",
      "handler": "order.complete",
      "config": {
        "plugins": [["admin::hasPermissions", ["plugins::orders.manage"]]]
      }
    }
  ]
}
