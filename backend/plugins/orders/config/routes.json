{
  "routes": [
    {
      "method": "POST",
      "path": "/",
      "handler": "Order.create",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/checkout",
      "handler": "Order.checkout",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "PUT",
      "path": "/",
      "handler": "Order.update",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "GET",
      "path": "/cart/:user_id",
      "handler": "Order.getCart",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/cart/price",
      "handler": "Order.calculateCartPrice",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "GET",
      "path": "/amount",
      "handler": "Order.calculateAmount",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "POST",
      "path": "/ship/:id",
      "handler": "Order.ship",
      "config": {
        "policies": []
      }
    },

    {
      "method": "GET",
      "path": "/",
      "handler": "Order.find",
      "config": {
        "policies": []
      }
    }
  ]
}
