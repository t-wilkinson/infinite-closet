{
  "kind": "collectionType",
  "collectionName": "order",
  "info": {
    "name": "Order",
    "description": "Includes information required to identify an order"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "cart",
        "list",
        "planning",
        "shipping",
        "cleaning",
        "completed",
        "dropped",
        "delayed",
        "error"
      ],
      "default": "cart",
      "required": true
    },
    "size": {
      "type": "string",
      "required": true
    },
    "product": {
      "model": "product"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "contact": {
      "model": "contact"
    },
    "review": {
      "model": "review"
    },
    "address": {
      "model": "address"
    },
    "rental": {
      "model": "rental"
    },

    "details": {
      "type": "string",
      "unique": false
    },
    "message": {
      "type": "json"
    },

    "startDate": {
      "type": "date"
    },
    "shippingDate": {
      "type": "datetime"
    },
    "rentalLength": {
      "type": "enumeration",
      "enum": ["short", "long"]
    },
    "shipment": {
      "type": "string"
    },
    "insurance": {
      "type": "boolean",
      "default": true
    }
  }
}
