{
  "kind": "collectionType",
  "collectionName": "order",
  "info": {
    "name": "Order",
    "description": "Includes information required to identify an order"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": ["cart", "list", "shipping", "completed", "dropped"],
      "default": "cart",
      "required": true
    },
    "size": {
      "type": "string",
      "required": true
    },
    "product": {
      "model": "product"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "contact": {
      "model": "contact"
    },
    "review": {
      "model": "review"
    },
    "address": {
      "model": "address"
    },
    "shipment": {
      "model": "shipment"
    },

    "expectedStart": {
      "type": "date"
    },
    "insurance": {
      "type": "boolean",
      "default": true
    },
    "rentalLength": {
      "type": "enumeration",
      "enum": ["short", "long"]
    },

    "shippingDate": {
      "type": "datetime"
    }
  }
}
