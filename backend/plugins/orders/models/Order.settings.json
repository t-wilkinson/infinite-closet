{
  "kind": "collectionType",
  "collectionName": "order",
  "info": {
    "name": "Order",
    "description": "Includes information required to identify an order"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": ["cart", "list", "planning", "shipping", "shipped"],
      "default": "planning",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "size": {
      "type": "string",
      "required": true
    },
    "pickupDate": {
      "type": "date"
    },
    "dropoffDate": {
      "type": "date"
    },
    "date": {
      "type": "date"
    },
    "rentalLength": {
      "type": "enumeration",
      "enum": ["short", "long"]
    },
    "address": {
      "model": "address",
      "plugin": "orders"
    },
    "paymentMethodID": {
      "type": "string"
    },
    "paymentIntentID": {
      "type": "string"
    },
    "shipmentID": {
      "type": "string"
    },
    "product": {
      "model": "product"
    },
    "user": {
      "model": "user",
      "plugin": "users-permissions"
    }
  }
}
