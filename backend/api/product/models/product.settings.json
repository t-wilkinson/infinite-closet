{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "customDesignerName": {
      "type": "string"
    },
    "designer": {
      "model": "designer",
      "via": "products"
    },
    "shortRentalPrice": {
      "type": "decimal",
      "required": false
    },
    "longRentalPrice": {
      "type": "decimal",
      "required": false
    },
    "retailPrice": {
      "type": "decimal"
    },
    "purchasePrice": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "GBP"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images", "videos"],
      "plugin": "upload",
      "required": true
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "custom.sizes"
    },
    "details": {
      "type": "richtext"
    },
    "stylistNotes": {
      "type": "richtext"
    },
    "sizingNotes": {
      "type": "richtext"
    },
    "categories": {
      "collection": "category"
    },
    "colors": {
      "collection": "color"
    },
    "fits": {
      "collection": "fit"
    },
    "occasions": {
      "collection": "occasion"
    },
    "styles": {
      "collection": "style"
    },
    "weather": {
      "collection": "weather"
    },
    "materials": {
      "collection": "material"
    },
    "metals": {
      "collection": "metal"
    },
    "categories_": {
      "type": "string",
      "private": true
    },
    "colors_": {
      "type": "string",
      "private": true
    },
    "fits_": {
      "type": "string",
      "private": true
    },
    "occasions_": {
      "type": "string",
      "private": true
    },
    "styles_": {
      "type": "string",
      "private": true
    },
    "weather_": {
      "type": "string",
      "private": true
    },
    "materials_": {
      "type": "string",
      "private": true
    },
    "metals_": {
      "type": "string",
      "private": true
    },
    "sizes_": {
      "type": "string",
      "private": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
