{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "designer": {
      "model": "designer",
      "via": "products"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "shortRentalPrice": {
      "type": "decimal"
    },
    "longRentalPrice": {
      "type": "decimal"
    },
    "retailPrice": {
      "type": "decimal"
    },
    "purchasePrice": {
      "type": "decimal"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "custom.sizes"
    },
    "details": {
      "type": "richtext"
    },
    "stylistNotes": {
      "type": "richtext"
    },

    "colors": {
      "collection": "color"
    },
    "fits": {
      "collection": "fit"
    },
    "occasions": {
      "collection": "occasion"
    },
    "styles": {
      "collection": "style"
    },
    "weather": {
      "collection": "weather"
    },
    "categories": {
      "collection": "category"
    }
  }
}
