{
  "routes": [
    {
      "method": "GET",
      "path": "/products",
      "handler": "product.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/designers",
      "handler": "designer.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/products/filters",
      "handler": "shop.query",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/products/routes",
      "handler": "product.routes",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/products/shop/:slug",
      "handler": "product.shopItem",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/products/acs-stock.csv",
      "handler": "product.acsStockSetup",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/products/facebook-catalog.csv",
      "handler": "product.facebookCatalog",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/products/:slug/reviews",
      "handler": "review.add",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/products/:slug/reviews/can-review",
      "handler": "review.canReview",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/products/:slug/reviews",
      "handler": "review.productReviews",
      "config": {
        "policies": []
      }
    },

    {
      "method": "GET",
      "path": "/size-chart",
      "handler": "sizing.sizeChart",
      "config": {
        "policies": []
      }
    }
  ]
}
