      "path": "/chat",
      "handler": "chat.send",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/chat/contact",
      "handler": "chat.contact",
      "config": {
        "policies": []
      }
    },

    {
      "method": "GET",
      "path": "/launch/party/promo",
      "handler": "launch.promo",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/launch/party/join",
      "handler": "launch.join",
      "config": {
        "policies": []
      }
    },

    {
      "method": "GET",
      "path": "/addresses/verify/:postcode",
      "handler": "addresses.verify",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/account/waitlist",
      "handler": "mail.waitlist",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/account/newsletter",
      "handler": "mail.newsletter",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/account/signin",
      "handler": "account.signin",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/account/signout",
      "handler": "account.signout",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/account/wallet",
      "handler": "stripe.attachSetupIntent",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/account/payment-methods",
      "handler": "stripe.paymentMethods",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/account/:id/addresses",
      "handler": "account.attachAddress",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    }
