{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "payment_intent": {
      "type": "string",
      "required": true
    },
    "cart_items": {
      "collection": "cart-item"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "planning",
        "shipping",
        "shipped"
      ],
      "default": "planning"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "address": {
      "model": "address"
    },
    "shipping": {
      "type": "string"
    },
    "shipping_class": {
      "type": "enumeration",
      "enum": [
        "one_day",
        "next_day",
        "two_day"
      ]
    }
  }
}
