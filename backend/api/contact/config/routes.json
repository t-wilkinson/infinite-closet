{
  "routes": [
    {
      "method": "POST",
      "path": "/emails/order-leaving/:orderId",
      "handler": "emails.orderLeaving",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/emails/order-cleaners/:orderId",
      "handler": "emails.sendToCleaners",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/account/mailing-list",
      "handler": "mail.mailingList",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/chat/contact",
      "handler": "mail.contact",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/account/signin",
      "handler": "account.signin",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/account/signout",
      "handler": "account.signout",
      "config": {
        "policies": []
      }
    },

    {
      "method": "POST",
      "path": "/account/wallet",
      "handler": "stripe.attachSetupIntent",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/account/payment-methods",
      "handler": "stripe.paymentMethods",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/account/:userid/payment-methods/:id",
      "handler": "stripe.detachPaymentMethods",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "POST",
      "path": "/account/:id/addresses",
      "handler": "account.attachAddress",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/account/:userid/addresses/:id",
      "handler": "address.delete",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/account/:id/addresses",
      "handler": "address.find",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    }
  ]
}
