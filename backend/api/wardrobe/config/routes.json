{
  "routes": [
    {
      "method": "POST",
      "path": "/my-wardrobe/items",
      "handler": "wardrobe.createItem",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/my-wardrobe/items/:item_id",
      "handler": "wardrobe.deleteItem",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },

    {
      "method": "GET",
      "path": "/my-wardrobe/items/:product_id",
      "handler": "wardrobe.productWardrobes",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "GET",
      "path": "/my-wardrobe/query",
      "handler": "wardrobe.query",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "POST",
      "path": "/my-wardrobe",
      "handler": "wardrobe.addWardrobe",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    },
    {
      "method": "DELETE",
      "path": "/my-wardrobe/:slug",
      "handler": "wardrobe.removeWardrobe",
      "config": {
        "policies": ["plugins::users-permissions.permissions"]
      }
    }
  ]
}
