#!/bin/sh
declare -A profiles
profiles[prod]="-f docker/docker-compose.yml -f docker/docker-compose.prod.yml"
profiles[dev]="-f docker/docker-compose.yml -f docker/docker-compose.dev.yml"
profiles[local]="-f docker/docker-compose.yml -f docker/docker-compose.dev.yml -f docker/docker-compose.local.yml"

docker-compose ${profiles[$1]} ${@:2}
